<odoo>
    <record id="view_dms_document_detail_form" model="ir.ui.view">
        <field name="name">muk_dms.document.detail.form</field>
        <field name="model">muk_dms.document.detail</field>
        <field name="arch" type="xml">
            <form string="Document Detail">
                <group>
                    <group>
                        <field name="effective_date" />
                        <field name="contract_id" />
                    </group>
                    <group>
                        <field name="trust_id" />
                        <field name="investor_id" domain="[('investor','=',True)]"/>
                        <field name="family_id" domain="[('family','=',True)]"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

     <record id="view_dms_document_detail_tree" model="ir.ui.view">
         <field name="name">muk_dms.document.detail.tree</field>
         <field name="model">muk_dms.document.detail</field>
         <field name="arch" type="xml">
            <tree string="Document Detail">
                <field name="effective_date" />
                <field name="trust_id" />
                <field name="investor_id" domain="[('investor','=',True)]"/>
                <field name="family_id" domain="[('family','=',True)]"/>
                <field name="contract_id" />
            </tree>
        </field>
    </record>

    <record id="action_dms_document_detail" model="ir.actions.act_window">
        <field name="name">Document Detail</field>
        <field name="res_model">muk_dms.document.detail</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_dms_document_detail_tree"/>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new category.
            </p>
            <p>
                Tags are used to categorize Documents.
            </p>
        </field>
    </record>

    <menuitem id="action_dms_category_detail" name="Document Detail"
        parent="cat_menu_muk_dms_config" action="action_dms_document_detail" sequence="3" />
</odoo>
